{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix functions run build"
    ]
  },
  "hosting": {
    "public": "web/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api", "function": { "functionId": "api", "region": "europe-west1" } },
      { "source": "/api/**", "function": { "functionId": "api", "region": "europe-west1" } },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
